<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc"
    android:orientation="vertical"
    android:paddingTop="100dp"
    tools:context=".Bai3LaActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="157dp"
            android:layout_height="229dp"
            android:layout_weight="1"
            android:src="@drawable/mausau" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="157dp"
            android:layout_height="229dp"
            android:layout_weight="1"
            android:src="@drawable/mausau" />



        <ImageView
            android:id="@+id/im3"
            android:layout_width="157dp"
            android:layout_height="229dp"
            android:layout_weight="1"
            android:src="@drawable/mausau" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/choi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chơi"
            android:onClick="onChoi"/>

        <TextView
            android:id="@+id/tvDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điểm của bạn :"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/choiLai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chơi Lại"
            android:background="@color/colorPrimaryDark"
            android:onClick="onChoiLai"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBack"
            style="@style/btnBai3la"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"/>

    </LinearLayout>
</LinearLayout>